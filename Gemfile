end

group :test do
  gem 'rspec-rails', '~> 2.10.1'
  gem 'webrat', '~> 0.7.3'
  gem 'sqlite3-ruby', :require => 'sqlite3'
  gem 'factory_girl_rails', '1.0'
end

group :production do
  gem 'pg'
end

