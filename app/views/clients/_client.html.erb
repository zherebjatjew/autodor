<div class="client_info" id="<%= client.id %>">
  <div class="column-left" style="width:25%">
    <h2><%= link_to client.name, client_path(client) %></h2>
  </div>

  <div class="column-middle" style="width:40%">
    <table width="100%">
      <tbody>
        <tr>
          <td><strong>График работы: </strong>
          <td><%= client.schedule %>
        </tr>
    <% if client.organization %>
        <tr>
          <td><strong>Контактное лицо: </strong>
          <td><%= client.contact %>
        </tr>
    <% end %>
        <tr>
          <td><strong>Почтовый адрес: </strong>
          <td><%= client.address2.nil? || client.address2.empty? ? client.address1 : client.address2 %>
        </tr>
        <tr>
          <td><strong>Телефон: </strong>
          <td><%= client.phones %><br />
        </tr>
        <tr>
          <td colspan="2"><%= client.note %>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="column-right" style="width:23%">
    <% unless client.used? %>
      <%= link_to "Удалить", client, :method => 'delete', :remote => true, :confirm => "Вы точно больше не будете работать с этим клиентом?", :class => "command delete" %>
    <% end %>
    <%= link_to "Изменить", edit_client_path(client), :class => 'command', :remote => true %>
  </div>
 
</div>
