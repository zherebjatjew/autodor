<script type="text/javascript">
  $j(document).ready(function() {
    $j('a.order-status-option').live('ajax:complete', function(evt, xhr, status) {
      $j(this).parent().parent().parent().html(xhr.responseText);
      return false;
    });
  });
</script>

<% unless @orders.empty? %>
  <%= will_paginate @orders %>
  <div class="clients">
    <%= render @orders %>
  </div>
  <%= will_paginate @orders %>
<% end %>

