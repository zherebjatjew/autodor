<tr>
  <td class="order">  
    <% created = order.created_at.strftime "%d.%m.%Y" %>
    <%= link_to "#{order.id}. #{created} #{order.info}", order %>
  </td>
  <% if @user.admin? || @user.owns?(order) %>
    <td class="order">
      <%= link_to @user.name, user_path(@user) %>
    </td>
    <td class="command">
      <%= link_to "изменить", edit_order_path(order) %>
    </td>
    <td class="command">
      <%= button_to "удалить", order, :method => :delete,
                                     :confirm => "You sure?",
                                     :title => order.info,
                                     :class => 'destroy_button' %>
    </td>
  <% end %>
</tr>
