<% store_location %>

<% all_clients = [] %>
<% Client.all.each { |c| all_clients << [c.name, c.id] } %>
<%= javascript_include_tag 'date' %>

<script type="text/javascript">
  function toggleGroup(form, button) {
    form.slideToggle(150);
    button.text(button.text() == '▼' ? '▲' : '▼');
  }

  function delCargo(item) {
    // Attr change does not affect on checkbox state,
    // so I am using plain check box yet
    item.find(".delete-check").attr('checked', true);
    item.hide(150);
  }
</script>

<%= form_for(@order) do |f| %>
  <% render 'shared/error_messages', :object => f.object %>
  <div style="width:100%;float:left">
    <div class="box">
      <div class="field">
        <%= f.label :forwarder, "Экспедитор" %><br />
        <% usrs = [] %>
        <% User.all.each { |u| usrs << [u.name, u.id]} %>
        <%= f.select :forwarder_id, options_for_select(usrs, @order.forwarder_id.to_i) %>
      </div>
      <div class="field">
        <%= f.label :committed_at, "Дата оформления" %><br />
        <%= f.calendar_date_select :committed_at %>
      </div>
      <div class="field">
        <%= f.check_box :signed %>Подписана<br />
        <%= f.check_box :paid %>Оплачена<br />
        <%= f.check_box :completed %>Выполнена<br />
      </div>
      <div class="field">
        <%= f.label :info, "Комментарий" %><br />
        <%= f.text_area :info %>
      </div>
    </div>
    <div class="box">
      <div class="field">
        <%= f.label :client_id, "Заказчик" %><br />
        <%= f.select :client_id, options_for_select(all_clients, @order.client_id.to_i) %>
        <%= link_to "Добавить", new_client_path %>
      </div>
      <div class="field">
        <%= f.label :sender_id, "Отправитель" %><br />
        <%= f.select :sender_id, options_for_select(all_clients, @order.sender_id.to_i) %>
        <%= link_to "Добавить", new_client_path %><br />
        <%= f.label :sender_date, "Дата доставки транспорта" %>
        <%= f.calendar_date_select :sender_date, :time => true %>
      </div>
      <div class="field">
        <%= f.label :receiver_id, "Получатель" %><br />
        <%= f.select :receiver_id, options_for_select(all_clients, @order.receiver_id.to_i) %>
        <%= link_to "Добавить", new_client_path %><br />
        <%= f.label :receiver_date, "Дата доставки транспорта" %>
        <%= f.calendar_date_select :receiver_date, :time => true %>
      </div>
    </div>

    <div class="box">
      <h2>Груз</h2>
      <div id="cargo" style="width:100%;float:left;">
        <% unless @order.id.nil? %>
          <% @order.cargos.each do |c| %>
            <%= f.fields_for :cargos, c, :child_index => (c.new_record? ? "index_to_replace_with_js" : nil) do |cargo_fm| %>
              <%= render 'cargos/cargo', :f => cargo_fm %>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= add_object_link("Добавить груз", f, Cargo.new, "cargos/new_cargo", "#cargo") %>
      </div>
    </div>

    <div class="box">
      <h2>Водитель</h2>
      <% all_drivers = [] %>
      <% Driver.all.each { |c| all_drivers << [c.name, c.id] } %>
      <div class="field">
        <%= f.select :driver_id, options_for_select(all_drivers, @order.driver_id.to_i) %>
        <%= link_to "Добавить", new_driver_path %>
      </div>
    </div>

    <div class="box">
      <h2>Транспорт</h2>

      <% all_trucks, all_trailers = [], [['Нет', nil]] %>
      <% Car.all.each { |truck|
        if truck.is_trailer?
          all_trailers << ["#{truck.model} #{truck.identity}", truck.id]
        else
          all_trucks << ["#{truck.model} #{truck.identity}", truck.id]
        end
      }%>
      <div class="field">
        <%= f.label :truck_id, "Тягач" %><br />
        <%= f.select :truck_id, options_for_select(all_trucks, @order.truck_id.to_i) %>
        <%= link_to "Добавить", new_truck_path, :id => 'create_truck', :remote => true %>
      </div>
      <div class="field">
        <%= f.label :trailer_id, "Прицеп" %><br />
        <%= f.select :trailer_id, options_for_select(all_trailers, @order.trailer_id.to_i) %>
        <%= link_to "Добавить", new_trailer_path %>
      </div>
    </div>
  
    <div class="actions">
      <%= f.submit "Сохранить" %>
    </div>
  </div>

<% end %>
